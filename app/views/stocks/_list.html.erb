<table class="table table-striped">
<thead>
  <th>Name</th>
  <th>Symbol</th>
  <th>Current Price</th>
  <% if @user == current_user %>
    <th>Actions</th>
  <% end %>
</thead>
<tbody>
  <% @user_stocks.each do |stock| %>
    <tr>
      <td><%= stock.name %></td>
      <td><%= stock.ticker %></td>
      <td><%= stock.price %></td>
      <% if @user == current_user %>
        <td><%= link_to "Remove Stock", user_stock_path(stock),
                    :method => :delete, :data => {:confirm => "Are you sure?"},
                    class: "btn btn-danger btn-xs" %></td>
      <% end %>
    </tr>
  <% end %>
</tbody>
</table>